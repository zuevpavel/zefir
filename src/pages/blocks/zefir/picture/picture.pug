.picture
    picture
        source(type="image/webp" media="(min-width: 1200px)" srcset="./img/hero-desktop.webp, ./img/hero-desktop@2x.webp 2x")
        source(type="image/webp" media="(min-width: 768px)" srcset="./img/hero-tablet.webp, ./img/hero-tablet@2x.webp 2x")
        source(type="image/webp" srcset="./img/hero-mobile.webp, ./img/hero-mobile@2x.webp 2x")
        source(media="(min-width: 1200px)" srcset="./img/hero-desktop.jpg, ./img/hero-desktop@2x.jpg 2x")
        source(media="(min-width: 768px)" srcset="./img/hero-tablet.jpg, ./img/hero-tablet@2x.jpg 2x")
        img.picture__image(src="./img/hero-mobile.jpg" srcset="./img/hero-mobile@2x.jpg 2x" alt="hero" width="300" height="144")
